?>

<?php
if(empty($this->categories) && empty($this->items))
{
	?>
	<span class="updater_text"><?php print $this->localisedStrings["ITEM_INSTALL_EMPTY_BROWSE_LIST_LABEL"];?></span>
	<?php
}
