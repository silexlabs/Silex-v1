				<?php
				if($this->itemsPage > 0)
				{
					?>
					<div style="float:left;">
						<button class="" onclick="javascript:<?php $this->generateForwarding(array("action"=>"browseCategory", "category"=>serialize(urlencodeArray($this->currentCategory)), "items_page"=>($this->itemsPage-1))); ?>">
