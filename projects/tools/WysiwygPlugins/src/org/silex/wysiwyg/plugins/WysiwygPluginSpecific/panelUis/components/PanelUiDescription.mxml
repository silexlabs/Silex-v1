<?xml version="1.0" encoding="utf-8"?>
<panelUis:PanelUiBase xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%"
		 xmlns:panel = "org.silex.wysiwyg.plugins.WysiwygPluginSpecific.panels.*"  
		 xmlns:ns1="org.silex.wysiwyg.ui.*" xmlns:panelUis="org.silex.wysiwyg.plugins.WysiwygPluginSpecific.panelUis.*" >

	<mx:Form width="100%" height="100%">
		
	<mx:HBox width="100%" height="100%">
		
		<mx:FormItem width="100%" height="100%" label="{propertyArray.descriptionText.description}" >
			<ns1:WysiwygTextArea text="{propertyArray.descriptionText.currentValue}"
						 change="updatePropertyValue(event.currentTarget.text, 'descriptionText')" width="100%" />
		</mx:FormItem>
		
		<mx:FormItem width="100%" height="100%" label="{propertyArray.tags.description}" >
			<ns1:WysiwygTextArea text="{propertyArray.tags.currentValue}"
						 change="updatePropertyValue(event.currentTarget.text, 'tags')" width="100%" height="100%" />
		</mx:FormItem>
		
	</mx:HBox>
	</mx:Form>
	
	<mx:HRule width="100%" />
	
</panelUis:PanelUiBase>
